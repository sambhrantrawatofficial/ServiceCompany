@{
    ViewData["Title"] = "Home Page";
}


<div class="container mt-4 mb-4">

    <!-- HERO ABOUT SECTION -->
    <div class="row align-items-center justify-content-center mb-5 text-white">
        <div class="col-md-6">
            <h1 class="fw-bold">Trusted Home Services in your area</h1>
            <p class="mt-3">
                ServiceProvidingCompany connects verified professionals with customers for
                home cleaning, repairs, beauty, and maintenance services.
                Inspired by platforms like Urban Company — built for trust.
            </p>
        </div>
        <div class="col-md-6 text-white">
            <img src="https://tse4.mm.bing.net/th/id/OIP.E6SBq1yapqfj6MMHvgahJgHaEK?rs=1&pid=ImgDetMain&o=7&rm=3" class="img-fluid rounded">
        </div>
    </div>

    <!-- TRUST STATS -->
    <div class="row mb-5 g-3">
        <div class="col-md-3">
            <div class="stat-box p-3">
                <h2 class="fw-bold ">@ViewBag.CustomerCount+</h2>
                <small >Happy Customers</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-box p-3">
                <h2 class="fw-bold">@ViewBag.ProviderCount+</h2>
                <small>Service Providers</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-box p-3">
                <h2 class="fw-bold">@ViewBag.AverageRating ★</h2>
                <small>Average Rating</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-box p-3">
                <h2 class="fw-bold ">@ViewBag.CompletedBookings+</h2>
                <small>Bookings Completed</small>
            </div>
        </div>

    </div>

    <!-- Popular categories -->
    <h4 class="fw-bold mb-3">Popular Services Categories</h4>
    <div class="row g-4">
            
        @foreach (var item in ViewBag.CategoryRatings)
        {
            <div class="col-md-3 mb-3">
                <div class="card service-card h-100 align-items-center position-relative shadow-sm">

                    <!-- Category Image -->
                    <img src="@item.CategoryImage"
                         class="card-img-top bw-img"
                         alt="@item.CategoryName"
                         onerror="this.src='https://via.placeholder.com/300x180';"
                         style="height:15rem; object-fit:cover;" />

                    <div class="card-body text-center">
                        <h6 class="mb-1">@item.CategoryName</h6>
                        <small>⭐ @item.AvgRating</small>
                    </div>

                    <!-- Make entire card clickable -->
                    <a asp-controller="Home"
                       asp-action="CategoryMoreInfo"
                       asp-route-id="@item.CategoryId"
                       class="stretched-link"></a>
                </div>
            </div>
        }
        <div class="text-center mt-4">
            <a asp-action="AllCategoryView" asp-controller="Home"
               class="btn btn-dark px-5 text-white text-decoration-none">
                View All Categories
            </a>
        </div>
    </div>

    <!-- MOST BOOKED -->
    <h4 class="fw-bold mt-5 mb-3">Most Booked Services</h4>
    <div class="scroll-x pb-3">
            
        @foreach (var svc in ViewBag.PopularServices)
        {
        <div class="card service-card mb-2 text-white">
            <img src="@svc.ImagePath"
                 class="bw-img"
                 alt="@svc.ServiceName">
            <div class="card-body text-white">
                <h6 class="text-white">
                    @svc.ServiceName
                </h6>
                <small>
                    ⭐ @svc.AvgRating (@svc.BookingCount bookings)
                </small>
                <br />
                <strong>
                    ₹@svc.Price
                </strong>
                    <div class="mt-2 d-flex gap-2">
                        <a asp-controller="Home"
                           asp-action="ServiceMoreInfo"
                           asp-route-id="@svc.ServiceId"
                           class="btn btn-outline-dark w-50">
                            Info
                        </a>
                    <form asp-action="AddToCart" asp-controller="Cart" method="post" class="w-50">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="serviceId" value="@svc.ServiceId" />
                        <button type="submit" class="btn btn-dark w-100" style="color:white!important">
                            Add to Cart
                        </button>
                    </form>
                    </div>
            </div>
        </div>
        }
 
    </div>

    <!-- ALL SERVICES -->
    <h4 class="fw-bold mt-5 mb-3">Explore All Services</h4>
    <div class="row g-2">
        @foreach (var svc in ViewBag.Services)
        {
            <div class="col-md-3 mb-3">
                <div class="card service-card p-3">
                    <h6 class="mb-1">@svc.ServiceName</h6>
                    <small>⭐ @svc.AvgRating</small><br>
                    <strong>Starting ₹@svc.Price</strong>
                    <div class="mt-2 d-flex gap-2">
                        <a asp-controller="Home"
                           asp-action="ServiceMoreInfo"
                           asp-route-id="@svc.Id"
                           class="btn btn-outline-dark w-50">
                            Info
                        </a>
                    <form asp-action="AddToCart" asp-controller="Cart" method="post" class="w-50">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="serviceId" value="@svc.Id" />
                        <button type="submit" class="btn btn-dark w-100" style="color:white!important">
                            Add to Cart
                        </button>
                    </form>
                </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
            <a asp-action="AllServiceView" asp-controller="Home"
               class="btn btn-dark px-5 text-white text-decoration-none">
                View All Services
            </a>
    </div>

</div>
<script>
    /* Navbar scroll effects */
    const navbar = document.querySelector('.navbar');

    window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
            navbar.classList.add('scrolled', 'shrink');
        } else {
            navbar.classList.remove('scrolled', 'shrink');
        }
    });

    /* Dark / Light mode */
    function toggleTheme() {
        document.body.classList.toggle('light-theme');
        document.getElementById('themeToggle').textContent =
            document.body.classList.contains('light-theme') ? '☀️' : '🌙';
    }

    /* Card reveal on scroll */
    const cards = document.querySelectorAll('.card');
    const observer = new IntersectionObserver(entries => {
        entries.forEach(e => {
            if (e.isIntersecting) e.target.classList.add('show');
        });
    }, { threshold: 0.15 });

    cards.forEach(card => {
        card.classList.add('reveal-card');
        observer.observe(card);
    });
</script>

