@model ServiceProvidingCompany.Models.SignUp

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Delete Profile</h4>
                </div>

                <div class="card-body p-4 text-center">
                    <p class="mb-3">
                        Are you sure you want to delete your profile?
                    </p>

                    <p><strong>Name:</strong> @Model.Full_Name</p>
                    <p><strong>Email:</strong> @Model.Email</p>

                    <form asp-action="DeleteConfirmed" asp-controller="Profile" method="post" class="mt-4">
                        @Html.AntiForgeryToken()

                        <!-- send email safely -->
                        <input type="hidden" asp-for="Email" />

                        <button type="submit" class="btn btn-danger px-4 me-2">
                            Yes, Delete
                        </button>

                        <a asp-action="Index" class="btn btn-secondary px-4">
                            Cancel
                        </a>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
