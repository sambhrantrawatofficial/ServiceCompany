<div class="d-flex align-items-center justify-content-center signup-success-wrapper">
    <div class="card signup-success-card w-100 p-4 text-center" style="max-width: 450px;">

        <div class="card-body p-4">

            <!-- Success Icon -->
            <div class="mb-3">
                <div class="signup-success-icon">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         width="36" height="36" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 0 0 1 16 0zM6.97 11.03a.75.75 0 0 0 1.08.02l3.992-4.99a.75.75 0 1 0-1.14-.976L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06l2.646 2.647z" />
                    </svg>
                </div>
            </div>

            <!-- Text -->
            <h4 class="fw-semibold mb-2">Booking Confirmed</h4>
            <p class="small mb-4">
                Your service booking has been placed successfully.
                Our service provider will contact you soon.
            </p>

            <!-- Actions -->
            <a asp-controller="Home"
               asp-action="Index"
               class="btn btn-outline-secondary w-100 fw-medium mb-2">
                Back to Home
            </a>

            <a asp-controller="Settings"
               asp-action="MyOrders"
               class="btn btn-outline-primary w-100 fw-medium">
                View My Bookings
            </a>

        </div>
    </div>
</div>
